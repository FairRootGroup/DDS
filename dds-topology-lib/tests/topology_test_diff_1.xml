<topology name="myTopology">

  <decltask name="task1">
		<exe>task1.exe</exe>
	</decltask>
	<decltask name="task2">
		<exe>task2.exe</exe>
	</decltask>

  <declcollection name="collection1">
		<tasks>
   		 <name>task1</name>
		   <name>task2</name>
	  </tasks>
  </declcollection>

	<main name="main">
	    <task>task1</task>
	    <collection>collection1</collection>
		<group name="group1" n="2">
			<task>task1</task>
			<task>task2</task>
			<collection>collection1</collection>
		</group>
		<group name="group2" n="3">
			<task>task1</task>
		</group>
	</main>

</topology>
